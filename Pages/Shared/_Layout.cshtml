    <script>

    window.onload = function() {
          handleRadioChange(1);
        }

        function handleRadioChange(radio) {
            

            if (radio === 1) {
                console.log('radio1 is selected');
                document.getElementById('summary').style.display = 'inline';
                document.getElementById('coaches-players').style.display = 'none';
               // window.location.href = baseUrl + 'Index';
                
            } else {
                console.log('radio2 is selected');
                document.getElementById('summary').style.display = 'none';
                document.getElementById('coaches-players').style.display = 'inline';
                 //window.location.href = baseUrl + 'CoachesPlayers';
            }
        }

       
    document.addEventListener('DOMContentLoaded', function() {
        // Get the modal
        var modal = document.getElementById("myModal");

        // Get the <span> element that closes the modal
        var span = document.getElementsByClassName("close")[0];

        // Get the paragraph element to display details
        var modalDetails = document.getElementById("modalDetails");

        // Get all buttons that open the modal
        var buttons = document.querySelectorAll(".openModalBtn");

        // Loop through the buttons and add click event listeners
        buttons.forEach(function(button) {
            button.addEventListener('click', function() {
                var tournament = button.getAttribute("data-tournament");
                var results = button.getAttribute("data-results");
                var pointsPerPlayer = button.getAttribute("data-pointsperplayer");
                var pointsAchieved = button.getAttribute("data-pointsachieved");

                var details = `
                    <strong>Tournament:</strong> ${tournament}<br>
                    <strong>Results:</strong> ${results}<br>
                    <strong>Points Per Player:</strong> ${pointsPerPlayer}<br>
                    <strong>Points Achieved:</strong> ${pointsAchieved}
                `;

                modalDetails.innerHTML = details;
                modal.style.display = "block";
            });
        });

        // When the user clicks on <span> (x), close the modal
        span.onclick = function() {
            modal.style.display = "none";
        }

        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    });
    </script>

